<?xml version="1.0" encoding="UTF-8"?>
<toolbox>
  <tool>
    <key>stringUtils</key>
    <scope>application</scope>
    <class>org.apache.commons.lang.StringUtils</class>
  </tool>
  <tool>
    <key>stringEscapeUtils</key>
    <scope>application</scope>
    <class>org.apache.commons.lang.StringEscapeUtils</class>
  </tool>
  <tool>
    <key>dateFormatUtils</key>
    <scope>application</scope>
    <class>org.apache.commons.lang.time.DateFormatUtils</class>
  </tool>
  <tool>
    <key>dateUtils</key>
    <scope>application</scope>
    <class>org.apache.commons.lang.time.DateUtils</class>
  </tool>
  <tool>
    <key>math</key>
    <scope>application</scope>
    <class>org.apache.velocity.tools.generic.MathTool</class>
  </tool>
  <tool>
    <key>URLDecoder</key>
    <scope>application</scope>
    <class>java.net.URLDecoder</class>
  </tool>
  <!-- 还可以配置com.jd.yao.man.common.utils.JsonUtil等其他工具类，见man-yao的springmvc配置文件 -->
</toolbox>